<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/guid" />

    <ImageView
        android:id="@+id/tomato_fire"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/tomato" />

    <ImageButton
        android:id="@+id/pause_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/pause" />

    <TextView
        android:id="@+id/text_view_timer"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/time"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#37FDFC" />

    <TextView
        android:id="@+id/textview_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/score"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#5DFC0A" />

    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textview_score"
        android:text="@string/highscore"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#FFEBCD" />

    <ImageView
        android:id="@+id/timeup_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:rotation="45"
        android:src="@drawable/timeup"
        android:visibility="invisible" />
</RelativeLayout>